# DocAtHome Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=5000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/docathome

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
DEFAULT_SEED_PASSWORD=your_secure_default_password_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Email Configuration (Sendgrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Payment Configuration (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# AI Service Configuration (Google Gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# Development/Testing Configuration
NODE_ENV=development
TEST_MONGO_URI=mongodb://localhost:27017/docathome_test
